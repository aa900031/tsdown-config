{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": [
			"node"
		],
		"allowJs": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.bench.ts"
	]
}
